{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/renderer/**/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"]
    }
  }
}
